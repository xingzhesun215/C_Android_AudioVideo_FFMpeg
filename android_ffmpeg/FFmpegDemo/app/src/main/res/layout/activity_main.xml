<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="ffmpeg0VersionClick"
            android:text="FFmpeg基本信息" />

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="ffmpeg1BaseInfoClick"
            android:text="FFmpeg基本信息" />

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="ffmpeg2LogClick"
            android:text="FFmpeg日志系统" />

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="ffmpeg3FileClick"
            android:text="FFmpeg文件操作" />
        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="ffmpeg4MetaClick"
            android:text="FFmpeg音视频meta" />
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="ffmpegExtractAudioClick"
            android:text="FFmpeg ExtractAudio抽取音频" />

        <Button
            android:id="@+id/remux_btn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="修改封装格式" />


    </LinearLayout>
</ScrollView>